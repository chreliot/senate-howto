{
  "actions" : {
    "build" : {
      "enabled" : true,
      "script" : "#!\/bin\/sh\n\npandoc -f markdown -t latex  --template=howto-template.tex  --shift-heading-level-by=-1  --lua-filter=replace-arrow.lua -o senate-howto.tex  main.md"
    },
    "clean" : {
      "enabled" : true,
      "script" : "latexmk -C"
    },
    "run" : {
      "enabled" : true,
      "script" : "latexmk -lualatex -pv -bibtex- senate-howto.tex"
    }
  }
}
